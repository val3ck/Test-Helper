{
  "manifest_version": 3,
  "name": "Test Helper",
  "version": "0.0.13",

  "description": "Get answers while you doing tasks.",
  "author": "WITHOUT_SHIT_RHERE",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  
  "permissions":["tabs","scripting","storage","activeTab"],
  "background": {
    "scripts": ["src/background/bg-processing.js"]
  },
  "content_scripts":[
    {
      "matches": ["*://naurok.com.ua/test/testing/*","*://naurok.ua/test/testing/*","*://naurok.com.ua/test/realtime-client/*","*://naurok.ua/test/realtime-client/*"],
      "js": ["src/utils/action/startScript.js","src/utils/ai/ai.js","src/utils/action/pressRightButton.js"]
    },
    {
      "matches": ["*://naurok.com.ua/test/start/*","*://naurok.ua/test/start/*"],
      "js": ["src/actions/changeName.js"]
    }
  ],
  "action": {
    "default_title": "Tap!",
    "default_icon": {
        "16":"icons/icon-16.png",
        "32":"icons/icon-32.png",
        "64":"icons/icon-64.png",
        "128":"icons/icon-128.png"
        
    },
    "default_popup":"src/browser/index.html"
  },
  "browser_specific_settings": {
     "gecko": {
       "id": "@val3ck.TestHelper",
       "strict_min_version": "120.0"
     },
     "gecko-android": {
       "id": "@val3ck.TestHelper",
       "strict_min_version": "120.0"
     }
   }

}
