{
  "manifest_version": 3,
  "name": "Lesson Helper",
  "version": "0.0.0",
  "description": "Get answers while you doing tasks.",
  "author": "WITHOUT_SHIT_RHERE",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "action": {
    "default_title": "Tap!",
    "default_icon": {
        "16":"icons/icon-16.png",
        "32":"icons/icon-32.png",
        "64":"icons/icon-64.png",
        "128":"icons/icon-128.png"
        
    },
    "default_popup":"main/index/index.html"
  },
  "permissions":["activetab"],
  "content_scripts":[
    {
      "matches": ["*://naurok.com.ua/test/testing/*"],
      "js": ["main/bg-worker/getInfo.js"],
      "run_at": "document_idle"
    }
  ]
}
