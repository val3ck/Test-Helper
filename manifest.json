{
  "manifest_version": 3,
  "name": "Test Helper",
  "version": "0.0.0",
  "description": "Get answers while you doing tasks.",
  "author": "WITHOUT_SHIT_RHERE",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  
  "permissions":["tabs","scripting","storage","activeTab"],
  "background": {
    "scripts": ["src/background/bg_info-correctb.js"]
  },
  "content_scripts":[
    {
      "matches": ["*://naurok.com.ua/test/testing/*"],
      "js": ["src/utils/action/startScript.js","src/utils/ai/ai.js"]
    },
    {
      "matches": ["*://naurok.com.ua/test/start/*"],
      "js": ["src/actions/changeName.js"]
    }
  ],
  "action": {
    "default_title": "Tap!",
    "default_icon": {
        "16":"icons/icon-16.png",
        "32":"icons/icon-32.png",
        "64":"icons/icon-64.png",
        "128":"icons/icon-128.png"
        
    },
    "default_popup":"src/browser/index.html"
  }
}
