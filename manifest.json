{
  "manifest_version": 2,
  "name": "Test Helper",
  "version": "0.0.13",
  "description": "Get answers while you doing tasks.",
  "author": "Entusiasts from Licey №1",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "*://naurok.com.ua/*",
    "*://*.naurok.com.ua/*"
  ],
  "background": {
    "scripts": ["main/scripts/shared.js", "main/scripts/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://naurok.com.ua/test/testing/*",
        "*://naurok.ua/test/testing/*",
        "*://naurok.com.ua/test/realtime-client/*",
        "*://naurok.ua/test/realtime-client/*"
      ],
      "js": ["main/scripts/shared.js", "main/scripts/content-script.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_title": "Налаштування розширення",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "subscription.html"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}