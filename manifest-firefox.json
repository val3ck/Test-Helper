{
  "manifest_version": 3,
  "name": "Test Helper",
  "version": "0.0.13",
  "description": "Get answers while you doing tasks.",
  "author": "Entusiasts from Licey №1",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["tabs", "scripting", "storage", "activeTab"],
  "host_permissions": [
    "*://naurok.com.ua/*",
    "*://*.naurok.com.ua/*"
  ],
  "background": {
    "service_worker": "main/scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://naurok.com.ua/test/testing/*",
        "*://naurok.ua/test/testing/*",
        "*://naurok.com.ua/test/realtime-client/*",
        "*://naurok.ua/test/realtime-client/*"
      ],
      "js": ["main/scripts/shared.js", "main/scripts/content-script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Налаштування розширення",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["subscription.html"],
      "matches": ["*://naurok.com.ua/*", "*://*.naurok.com.ua/*"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "@testhelper.aiassistant",
      "strict_min_version": "120.0"
    },
    "gecko-android": {
      "id": "@testhelper.aiassistant",
      "strict_min_version": "120.0"
    }
  }
}